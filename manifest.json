{
  "manifest_version": 3,
  "name": "PCRS Video Summarizer",
  "version": "1.0.0",
  "description": "Scrapes YouTube videos from PCRS, generates transcripts, and creates ChatGPT summaries",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtubetotranscript.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.utoronto.ca/*", "https://*.pcrs.utoronto.ca/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
